{
  "manifest_version": 3,
  "name": "QuickSave Links & Notes",
  "version": "1.0.0",
  "description": "Save links and notes with starring, one-click open, and copy-to-clipboard.",
  "action": {
  "default_popup": "popup.html",
  "default_icon": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
},
  "permissions": [
    "storage",
    "activeTab",
    "tabs"
  ],
  "icons": {
  "128": "icon128.png"
  },
  
  "host_permissions": [
    "<all_urls>"
  ]
}

